<config>
    <modules>
        <Laurent_Sass>
            <version>1.0.0</version>
        </Laurent_Sass>
    </modules>
    <global>
        <helpers>
            <sass>
                <class>Laurent_Sass_Helper</class>
            </sass>
        </helpers>
        <models>
            <core>
                <rewrite>
                    <design_package>Laurent_Sass_Model_Design_Package</design_package>
                </rewrite>
            </core>
        </models>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <sass>
                    <files>
                        <default>Laurent_Sass.csv</default>
                    </files>
                </sass>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <dev>
            <sass>
                <ruby_sass_command>sass</ruby_sass_command>
            </sass>
        </dev>
    </default>
</config>